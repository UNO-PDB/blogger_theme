:root {
    --body-text-color: $(body.text.color);
    --body-background-color: $(body.background.color);
    --header-background-color: $(header.background.color);
    --sidebar-background-color: $(sidebar.background.color);
    --sidebar-widget-background-color: $(sidebar.widget.background.color);
    --post-title-background-color: $(post.title.background.color);
    --post-title-text-color: $(post.title.text.color);
    --post-snippet-background-color: $(post.snippet.background.color);
    --post-background-color: $(post.background.color);
    --comments-background-color: $(comments.background.color);
    --comments-post-background-color: $(comments.post.background.color);
    --comment-background-color: $(comment.background.color);
    --post-navigation-active-background-color: $(post.navigation.active.background.color);
    --post-navigation-inactive-background-color: $(post.navigation.inactive.background.color);
    --body-link-color: $(body.link.color);
    --body-link-visited-color: $(body.link.visited.color);
    --body-link-hover-color: $(body.link.hover.color);
    --search-text-color: $(search.text.color);
    --search-background-color: $(search.background.color);
    --search-hover-background-color: $(search.hover.background.color);
    --label-background-color: $(label.background.color);
    --popular-posts-title-background-color: $(popular.posts.title.background.color);
}